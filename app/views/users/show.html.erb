<% provide(:title, @user.name) %>

<div class = "row">
  <!--aside tag used for things like sidebars, indirectly related to page-->
  <aside class = "col-md-4">
    <section class = "user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
</div>

<table class = "table table-striped">
  <thead>
    <tr>
      <th> Name </th>
      <th> Email </th>
      <th> Created at </th>
      <th> Updated at </th>
    </tr>
  </thead>

  <tbody>
    <tr>
      <td> <%= @user.name %> </td>
      <td> <%= @user.email %> </td>
      <td> <%= @user.created_at %> </td>
      <td> <%= @user.updated_at %> </td>
    </tr>
  </tbody>
</table>
